<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <parent>
       <groupId>fr.soleil</groupId>
       <artifactId>super-pom-C-CPP-device</artifactId>
       <version>RELEASE</version>
   </parent>

   <groupId>fr.soleil.device</groupId>
   <artifactId>LimaDetector-${aol}-${mode}</artifactId>
   <version>1.0.7</version>
   <packaging>nar</packaging>
   <name>LimaDetector</name>
   <description>LimaDetector device</description>

    <dependencies>

		<dependency>
         <groupId>fr.soleil.lib</groupId>
         <artifactId>YAT4Tango-${aol}-${library}-${mode}</artifactId>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib</groupId>
         <artifactId>YAT-${aol}-${library}-${mode}</artifactId>
      </dependency>
      <dependency>
         <groupId>fr.soleil.lib</groupId>
         <artifactId>Utils-${aol}-${library}-${mode}</artifactId>
      </dependency>

      <dependency>
         <groupId>org.boost</groupId>
         <artifactId>Boost-libraries-${aol}-shared-${mode}</artifactId>
      </dependency>

      <dependency>
            <groupId>fr.in2p3</groupId>
            <artifactId>Xpix-${aol}-static-release</artifactId>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib.Lima</groupId>
         <artifactId>LimaControl-${aol}-shared-${mode}</artifactId>
         <version>1.0.7</version>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaAdsc-${aol}-shared-${mode}</artifactId>
         <version>1.0.7</version>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaBasler-${aol}-shared-${mode}</artifactId>
         <version>1.0.7</version>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaMarccd-${aol}-shared-${mode}</artifactId>
         <version>1.0.7</version>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaPilatus-${aol}-shared-${mode}</artifactId>
         <version>1.0.7</version>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaProsilica-${aol}-shared-${mode}</artifactId>
         <version>1.0.7</version>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaSimulator-${aol}-shared-${mode}</artifactId>
         <version>1.0.7</version>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib.Lima.Camera</groupId>
         <artifactId>LimaXpad-${aol}-shared-${mode}</artifactId>
         <version>1.0.7</version>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib</groupId>
         <artifactId>GDShare-${aol}-${library}-${mode}</artifactId>    
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib</groupId>
         <artifactId>Nexus4Tango-${aol}-${library}-${mode}</artifactId>
      </dependency>

      <dependency>
         <groupId>fr.soleil.lib</groupId>
         <artifactId>NexusCPP-${aol}-${library}-${mode}</artifactId>
      </dependency>
    </dependencies>

   <build>
       <plugins>
            <plugin>
                <groupId>fr.soleil.maven.plugins</groupId>
                <artifactId>maven-cvs-plugin</artifactId>
                <configuration>
                <enable>false</enable>
                </configuration>
            </plugin>

            <plugin>
                 <groupId>org.freehep</groupId>
                 <artifactId>freehep-nar-plugin</artifactId>
                 <configuration>
                     <cpp>
                        <defines>
                           <define>BOOST_ALL_DYN_LINK</define>
                           <define>LOG4TANGO_HAVE_INT64_T</define>
                           <define>USE_GIGE</define>

                           <!-- define wich detector you need to ENABLE -->
                           <define>ADSC_ENABLED</define>
                           <define>BASLER_ENABLED</define>
                           <define>MARCCD_ENABLED</define>
                           <define>PILATUS_ENABLED</define>
                           <define>PROSILICA_ENABLED</define>
                           <define>SIMULATOR_ENABLED</define>
                           <define>XPAD_ENABLED</define>
                        </defines>

                        <systemIncludePaths>

                        	<systemIncludePath>${env.PYLON_ROOT}/include</systemIncludePath>                          
                        	<systemIncludePath>${env.GENICAM_ROOT_V1_1}/include/genicam</systemIncludePath>

							<systemIncludePath>${env.PROSILICA_ROOT}/include</systemIncludePath>           
							
							<systemIncludePath>${env.ADSC_ROOT}/src_std/incl</systemIncludePath>
							<systemIncludePath>${env.ADSC_ROOT}/src_std/detcon_lib_th</systemIncludePath>
							<systemIncludePath>${env.ADSC_ROOT}/src_std/auxlib</systemIncludePath>

                        </systemIncludePaths>

                        <!-- exclude every detector who is NOT ENABLED -->
                        <excludes>
                            <!--<exclude>Adsc*.*</exclude>-->
                            <!--<exclude>Basler*.*</exclude>-->
                            <!--<exclude>MarCCD*.*</exclude>-->
                            <!--<exclude>Pilatus*.*</exclude>-->
                            <!--<exclude>Prosilica*.*</exclude>-->
                            <!--<exclude>Simulator*.*</exclude>-->
                            <!--<exclude>Xpad*.*</exclude>-->
                        </excludes>

                        <!-- define less verbose mode for gcc-->
                        <options>
                            <option>-w</option>
                        </options>
                     </cpp>   
                    <linker>
                        <libs>
                            <lib>
                                <name>PvAPI</name>
                                <type>shared</type>
                                <directory>${env.PROSILICA_ROOT}/bin/x86</directory>
                            </lib>
                            
                            <lib>
                                <name>auxlib</name>
                                <type>shared</type>
                                <directory>${env.ADSC_ROOT}/lib/linux</directory>
                            </lib>
                            
                        </libs>
                    </linker>                  
                 </configuration>
            </plugin>

       </plugins>
   </build>

   <developers>
       <developer>
           <id>noureddine</id>
           <name>noureddine</name>
           <url>http://controle/</url>
           <organization>Synchrotron Soleil</organization>
           <organizationUrl>http://www.synchrotron-soleil.fr</organizationUrl>
           <roles>
               <role>manager</role>
           </roles>
           <timezone>1</timezone>
       </developer>
   </developers>
</project>
