   <build>
       <plugins>
            <plugin>
                 <groupId>fr.soleil.maven.plugins</groupId>
                 <artifactId>maven-cvs-plugin</artifactId>
                 <configuration>
                 <enable>false</enable>
                 </configuration>
            </plugin>

            <plugin>
                 <groupId>org.freehep</groupId>
                 <artifactId>freehep-nar-plugin</artifactId>
                 <configuration>
                     <cpp>
                        <defines>
                           <define>BOOST_ALL_DYN_LINK</define>
                           <define>LOG4TANGO_HAVE_INT64_T</define>
                           <define>USE_GIGE</define>
                           
                           <!-- define wich detector you need to ENABLE -->
                           <define>SIMULATOR_ENABLED</define>
                           <!--<define>BASLER_ENABLED</define>-->
                           <!--<define>XPAD_ENABLED</define>-->
                          <!--<define>PILATUS_ENABLED</define>-->
                        </defines>

                        <systemIncludePaths>
                           <!--<systemIncludePath>${env.PYLON_ROOT}/include</systemIncludePath>-->
                           <!--<systemIncludePath>${env.GENICAM_ROOT_V1_1}/include/genicam</systemIncludePath>-->
                           <!--<systemIncludePath>/home/informatique/ica/noureddine/DeviceSources/PCIex280311/trunk/sw/xpci_lib</systemIncludePath>-->
                        </systemIncludePaths>

                        <!-- exclude every detector who is NOT ENABLED -->
                        <excludes>
                            <!--<exclude>Simulator*.*</exclude>-->
                            <exclude>Basler*.*</exclude>
                            <exclude>Xpad*.*</exclude>
                            <exclude>Pilat*.*</exclude>
                        </excludes>

                        <!-- define less verbose mode for gcc-->
                        <options>
                            <option>-w</option>
                        </options>
                     </cpp>

                     <!-- define libraries path's -->
                     <linker>
                        <libs>

                        </libs>
                     </linker>
                 </configuration>
            </plugin>

       </plugins>
   </build>

